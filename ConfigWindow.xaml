<ContentDialog x:Class="VMGenerator.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration">

    <TabView>
            <TabView.TabItems>
                <TabViewItem Header="Proxmox" IsClosable="False">
                    <StackPanel Padding="20" Spacing="16">
                        <TextBlock Text="Proxmox URL:" FontWeight="SemiBold"/>
                        <TextBox x:Name="ProxmoxUrlBox" PlaceholderText="https://proxmox.example.com:8006"/>

                        <TextBlock Text="Username:" FontWeight="SemiBold"/>
                        <TextBox x:Name="ProxmoxUserBox" PlaceholderText="root@pam"/>

                        <TextBlock Text="Password:" FontWeight="SemiBold"/>
                        <TextBox x:Name="ProxmoxPassBox" PlaceholderText="Enter password"/>
                    </StackPanel>
                </TabViewItem>

                <TabViewItem Header="TinyFM" IsClosable="False">
                    <StackPanel Padding="20" Spacing="16">
                        <TextBlock Text="TinyFM URL:" FontWeight="SemiBold"/>
                        <TextBox x:Name="TinyUrlBox" PlaceholderText="https://tinyfm.example.com"/>

                        <TextBlock Text="Username:" FontWeight="SemiBold"/>
                        <TextBox x:Name="TinyUserBox" PlaceholderText="admin"/>

                        <TextBlock Text="Password:" FontWeight="SemiBold"/>
                        <TextBox x:Name="TinyPassBox" PlaceholderText="Enter password"/>
                    </StackPanel>
                </TabViewItem>

                <TabViewItem Header="Storage &amp; Format" IsClosable="False">
                    <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Storage Options (comma separated):" FontWeight="SemiBold"/>
                            <TextBox x:Name="StorageOptionsBox" PlaceholderText="local-lvm, nfs-storage"/>

                            <TextBlock Text="Default Storage:" FontWeight="SemiBold"/>
                            <TextBox x:Name="StorageDefaultBox" PlaceholderText="local-lvm"/>

                            <TextBlock Text="Format Options (comma separated):" FontWeight="SemiBold"/>
                            <TextBox x:Name="FormatOptionsBox" PlaceholderText="qcow2, raw"/>

                            <TextBlock Text="Default Format:" FontWeight="SemiBold"/>
                            <TextBox x:Name="FormatDefaultBox" PlaceholderText="qcow2"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabViewItem>

                <TabViewItem Header="NoMachine" IsClosable="False">
                    <StackPanel Padding="20" Spacing="16">
                        <TextBlock Text="NoMachine Config Path (Local):" FontWeight="SemiBold"/>
                        <TextBox x:Name="NoMachinePathBox" PlaceholderText="C:\Users\User\Documents\NoMachine\"/>
                        <TextBlock Text="Note: This folder will be searched for [VM_Name].nxs files." 
                                   Style="{StaticResource CaptionTextBlockStyle}" Foreground="Gray"/>
                    </StackPanel>
                </TabViewItem>

                <TabViewItem Header="Settings" IsClosable="False">
                    <StackPanel Padding="20" Spacing="16">
                        <CheckBox x:Name="DebugModeCheckBox" Content="Debug Mode (показывать детальные логи)"/>
                        <InfoBar IsOpen="True" Severity="Informational" IsClosable="False"
                                 Message="Включите Debug Mode для просмотра подробной информации о процессе клонирования и настройки."/>
                    </StackPanel>
                </TabViewItem>
            </TabView.TabItems>
    </TabView>
</ContentDialog>
