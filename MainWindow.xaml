<Window x:Class="VMGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="VM Generator - Clone &amp; Configure"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <SolidColorBrush x:Key="Fg"   Color="#DCDCDC"/>
        <SolidColorBrush x:Key="Line" Color="#3C3F41"/>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Background" Value="#3C3F41"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="{StaticResource Line}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="{StaticResource Line}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="{StaticResource Line}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="templateRoot"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    SnapsToDevicePixels="true">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="0" MinWidth="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter x:Name="contentPresenter"
                                                      Grid.Column="0"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      Margin="{TemplateBinding Padding}"
                                                      IsHitTestVisible="false"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                      TextBlock.Foreground="{StaticResource Fg}"/>
                                    <ToggleButton x:Name="toggleButton"
                                                  Grid.ColumnSpan="2"
                                                  Background="Transparent"
                                                  BorderBrush="Transparent"
                                                  BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Focusable="false"
                                                  ClickMode="Press">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="20"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Path x:Name="arrow"
                                                              Grid.Column="1"
                                                              Data="M0,0 L4,4 L8,0 Z"
                                                              Fill="{StaticResource Fg}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="true"
                                   Focusable="false"
                                   PopupAnimation="Slide">
                                <Border x:Name="dropDownBorder"
                                        Background="#2D2D2D"
                                        BorderBrush="{StaticResource Line}"
                                        BorderThickness="1"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ScrollViewer x:Name="DropDownScrollViewer">
                                        <ItemsPresenter x:Name="ItemsPresenter"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3C3F41"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2E7D32"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="{StaticResource Line}"/>
            <Setter Property="Width" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="ShowsPreview" Value="True"/>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Line}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True" Margin="0">
        <!-- TOP BAR -->
        <Border DockPanel.Dock="Top" Background="#262626" Padding="6"
                BorderBrush="{StaticResource Line}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mode selection -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button x:Name="BtnConfig" Content="Config" Click="BtnConfig_Click" Margin="0,0,6,0"
                            Background="#2E7D32" ToolTip="Открыть настройки"/>
                    <ComboBox x:Name="ModeCombo" Width="120" SelectionChanged="ModeCombo_SelectionChanged">
                        <ComboBoxItem Content="Clone Only" Tag="clone"/>
                        <ComboBoxItem Content="Configure Only" Tag="configure"/>
                        <ComboBoxItem Content="Clone + Configure" Tag="both" IsSelected="True"/>
                    </ComboBox>
                    <Button x:Name="BtnStart" Content="Start" Click="BtnStart_Click" Background="#2E7D32"/>
                    <Button x:Name="BtnStop"  Content="Stop"  Click="BtnStop_Click" IsEnabled="False" Background="#8B2F2F"/>
                    <Button x:Name="BtnReset" Content="Reset" Click="BtnReset_Click" Background="#B8860B"
                            ToolTip="Сбросить браузер (принудительно)"/>
                </StackPanel>

                <!-- Current operation -->
                <TextBlock x:Name="CurrentOpText" Grid.Column="1" Foreground="{StaticResource Fg}"
                          VerticalAlignment="Center" Margin="0,0,12,0" FontStyle="Italic"/>

                <!-- Status badge -->
                <Border x:Name="StatusBadge" Grid.Column="2" CornerRadius="10" Padding="10,4"
                        Background="#444" BorderBrush="#555" BorderThickness="1"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" Foreground="White" />
                </Border>
            </Grid>
        </Border>

        <!-- MAIN: browser + panel -->
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="640" Width="2*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition MinWidth="380" Width="*"/>
            </Grid.ColumnDefinitions>

            <wv2:WebView2 x:Name="Browser" Grid.Column="0" DefaultBackgroundColor="#FF1E1E1E"/>

            <GridSplitter Grid.Column="1"/>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Queue panel -->
                <Border Grid.Row="0" Background="#262626" Padding="8"
                        BorderBrush="{StaticResource Line}" BorderThickness="0,0,0,1">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                            <TextBlock Text="VM Queue" Foreground="{StaticResource Fg}"
                                     FontWeight="Bold" Margin="0,0,12,0"/>
                            <Button x:Name="BtnAdd"   Content="＋"   Click="BtnAdd_Click"   ToolTip="Add VM"/>
                            <Button x:Name="BtnClear" Content="Clear" Click="BtnClear_Click"/>
                        </StackPanel>

                        <Grid DockPanel.Dock="Top" Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name"    Foreground="{StaticResource Fg}" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Storage" Foreground="{StaticResource Fg}" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="Format"  Foreground="{StaticResource Fg}" FontWeight="Bold"/>
                            <TextBlock Grid.Column="3" Text="Status"  Foreground="{StaticResource Fg}" FontWeight="Bold"/>
                        </Grid>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="QueueList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2,0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>

                                            <ComboBox Grid.Column="1" Margin="0,0,4,0"
                                                      ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=StorageOptions}"
                                                      SelectedItem="{Binding Storage, UpdateSourceTrigger=PropertyChanged}" />

                                            <ComboBox Grid.Column="2" Margin="0,0,4,0"
                                                      ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=FormatOptions}"
                                                      SelectedItem="{Binding Format, UpdateSourceTrigger=PropertyChanged}" />

                                            <TextBlock Grid.Column="3" Margin="0,0,4,0" VerticalAlignment="Center"
                                                       HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource Fg}"/>
                                                        <Setter Property="Text" Value="—"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                <Setter Property="Text" Value="✓"/>
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsConfigured}" Value="True">
                                                                <Setter Property="Text" Value="✓✓"/>
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <Button Grid.Column="4" Content="✖" Click="BtnRemoveRow_Click" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </Border>

                <GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch"/>

                <!-- Log panel -->
                <Border Grid.Row="2" BorderBrush="{StaticResource Line}" BorderThickness="0" Padding="0">
                    <DockPanel>
                        <Border Background="#262626" Padding="6" DockPanel.Dock="Top"
                                BorderBrush="{StaticResource Line}" BorderThickness="0,0,0,1">
                            <TextBlock Text="Log" Foreground="{StaticResource Fg}" FontWeight="Bold"/>
                        </Border>

                        <RichTextBox x:Name="LogBox"
                                     IsReadOnly="True"
                                     Background="#1E1E1E"
                                     Foreground="#C8C8C8"
                                     FontFamily="Consolas"
                                     FontSize="13"
                                     BorderThickness="0"
                                     Padding="6"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     AcceptsReturn="True" />
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
